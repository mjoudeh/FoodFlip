<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/ff_blue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_screen_title"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:src="@drawable/title"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/main_screen_search"
        android:layout_margin="20dp"
        android:contentDescription="@string/logo_description"
        />

    <ImageButton
        android:id="@+id/main_screen_search"
        android:contentDescription="@string/searchButton_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        />

    <ImageButton
        android:id="@+id/main_screen_submit"
        android:contentDescription="@string/submitButton_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_button"
        android:layout_below="@id/main_screen_search"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        />

</RelativeLayout>
